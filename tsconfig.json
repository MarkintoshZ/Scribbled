{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "lib": [
      "ESNext", 
      "DOM"
    ],
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "declaration": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}